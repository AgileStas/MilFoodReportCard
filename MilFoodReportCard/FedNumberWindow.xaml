<Window x:Class="MilFoodReportCard.FedNumberWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MilFoodReportCard"
        mc:Ignorable="d"
        Title="FedNumberWindow" Height="450" Width="800">
    <!-- <Window.Resources>
        <local:DateConverter x:Key="dateConverter"/>
    </Window.Resources> -->
    <Grid>
        <DataGrid Name="dgFedNumber" AutoGenerateColumns="False" MinHeight="256" MinRowHeight="32" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Date, StringFormat=dd.MM.yyyy, Mode=TwoWay}"/>
                <DataGridTextColumn Binding="{Binding TotalFed}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
